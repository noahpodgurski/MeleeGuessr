generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  username String
}

enum Character {
  DrMario
  Mario
  Luigi
  Bowser
  Peach
  Yoshi
  DK
  Falcon
  Ganondorf
  Falco
  Fox
  Ness
  IC
  Kirby
  Samus
  Zelda
  Sheik
  Link
  YLink
  Pichu
  Pikachu
  Jigglypuff
  Mewtwo
  GAW
  Marth
  Roy
}

model Clip {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  clipSrc String @unique
  player String
  character Character
  slp String?
  oppPlayer String
  oppChar Character
}